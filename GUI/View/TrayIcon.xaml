<UserControl
    x:Class="GBDPIGUI.View.TrayIcon"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:vm="clr-namespace:GBDPIGUI.ViewModel"
    xmlns:view="clr-namespace:GBDPIGUI.View"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800">

    <UserControl.DataContext>
        <vm:TrayIconViewModel />
    </UserControl.DataContext>

    <hc:NotifyIcon
        x:FieldModifier="private"
        x:Name="NotifyIconContextContent"
        Text="CensoringDPI"
        Icon="pack://application:,,,/CensoringDPI;component/icon.ico">
        <hc:NotifyIcon.ContextContent>
            <Grid
                Margin="5"
                Background="{DynamicResource BackgroundBrush}">
                <view:MainView />
            </Grid>
        </hc:NotifyIcon.ContextContent>
    </hc:NotifyIcon>
</UserControl>
